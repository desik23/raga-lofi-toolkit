{
    "audiocraft": {
        "model_size": "small",
        "device": "cpu",
        "model_path": "~/audiocraft",
        "cache_dir": "~/.cache/audiocraft"
    },
    "audio_processing": {
        "sample_rate": 44100,
        "bit_depth": 16,
        "channels": 2
    },
    "generation": {
        "default_bpm": 75,
        "default_key": "C",
        "default_length": 32,
        "default_lofi_style": "classic",
        "effect_intensity": 0.5
    },
    "paths": {
        "output_dir": "outputs",
        "sample_library": "sample_library",
        "raga_data": "data/ragas.json"
    },
    "ui": {
        "theme": "dark",
        "show_visualizations": true
    }
}